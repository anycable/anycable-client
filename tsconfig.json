{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["ES2020.Promise", "DOM"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@anycable/core": ["packages/core"],
      "@anycable/core/testing": ["packages/core/testing"]
    }
  },
  "exclude": ["**/errors.ts"]
}
