{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": false,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["ES2020.Promise", "DOM"],
    "types": ["node", "jest"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@anycable/core": ["package/core"]
    }
  },
  "include": ["packages/web/**/*", "packages/core/**/*"],
  "exclude": ["**/errors.ts"]
}
